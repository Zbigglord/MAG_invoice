<config>
    <modules>
        <Hellux_Invoice>
            <version>0.1.0</version>
        </Hellux_Invoice>
    </modules>	
	<admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <invoice before="Mage_Adminhtml">Hellux_Invoice_Adminhtml</invoice>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
   <adminhtml>
		<layout>
		   <updates>
				<invoice>
					 <file>hellux/invoice/invoice.xml</file>
				 </invoice>
			</updates>
		</layout>		
    </adminhtml> 
 <global>
  <models>
   <invoice>
    <class>Hellux_Invoice_Model</class>
   </invoice>
  </models>
  <blocks>
   <invoice>
    <class>Hellux_Invoice_Block</class>
   </invoice>
  </blocks>
  <helpers>
   <invoice>
    <class>Hellux_Invoice_Helper</class>
   </invoice>
  </helpers>  
 </global>
</config>